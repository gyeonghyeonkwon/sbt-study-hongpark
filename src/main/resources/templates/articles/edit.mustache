<!--수정 페이지 -->
{{>layout/header}}

<form class ="container" action="/article/update" method="post">

   <input name ="id" type = "hidden" value="{{id}}">
    <div class = "mb-3">
        <label class = "form-lable">제목</label>
        <input type="text" class ="form-control" name="title" value="{{article.title}}">
    </div>

    <div class = "mb-3">
        <label class = "form-lable">내용</label>
        <textarea class = "form-control" rows="3" name="content">{{article.content}}</textarea>
    </div>

    <button type="submit" class = "btn btn-primary">Submit</button>

    <a href="/articles/{{article.id}}">뒤로 가기</a>

</form>

{{>layout/footer}}